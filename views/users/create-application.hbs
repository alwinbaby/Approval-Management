<div class="row my-3">
    <div class="col-xs-12 mx-auto">
        <h2>Create a new Software Request</h2>
    </div>
</div>

<div id="application-spinner" class="spinner"></div>

<div id="application" class="row">
    <div class="col-lg-6 mx-auto">
        <form id="createApplication" method="POST" action="/api/applications">
            <div class="form-group">
                <label for="software-select">Software:</label>
                <input name="softwareId" type="text" class="form-control" id="software-select" required>
                <p id="softwareError" class="text-danger" style="display: none;">Please select a software.</p>
            </div>
            <div class="form-group">
                <label for="reason">Reason for application:</label>
                <textarea name="reason" id="reason" class="form-control" required></textarea>
                <p id="reasonError" class="text-danger" style="display: none;">Please enter a reason.</p>
            </div>
        </form>
        
        <button form="createApplication" id="submit" class="btn btn-primary float-right">Submit</button>
        <button id="clear" class="btn btn-link float-right">Clear</button>
    </div>
</div>

<script src="/js/users/create-application.js"></script>

<style>
    #application-spinner {
        position: absolute;
        left: 50%;
        z-index: 9999;
    }
</style>
