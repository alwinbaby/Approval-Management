<div class="row mt-3">
  <div class="col-xs-12 mx-auto">
    <h2>Pending Software Requests</h2>
  </div>
</div>

<div id="loading-spinner" class="spinner"></div>

<div id="applications" class="row">
  <div class="col-12 mx-auto">
    <table class="table table-striped table-hover" id="software_table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">User</th>
          <th scope="col">Software</th>
          <th scope="col">Status</th>
          <th scope="col">Submitted At</th>
        </tr>
      </thead>
      <tbody id="software_table_body">
      </tbody>
    </table>
  </div>
</div>

<div class="row mt-5">
  <div class="col-xs-12 mx-auto">
    <h2>Completed Software Requests</h2>
  </div>
</div>

<div id="pastApplications" class="row">
  <div class="col-12 mx-auto">
    <table class="table table-striped table-hover" id="past_software_table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">User</th>
          <th scope="col">Software</th>
          <th scope="col">Status</th>
          <th scope="col">Submitted At</th>
        </tr>
      </thead>
      <tbody id="past_software_table_body">
      </tbody>
    </table>
  </div>
</div>

<div class="modal fade" id="applicationModal">
  <div class="modal-dialog">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Application # <span id="modal_applicationId"></span></h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
        Software: <span id="modal_software"></span>
        <br/>
        <br/>
        Reason: <span id="modal_reason"></span>
        <br/>
        <br/>
        Approver: <span id="modal_approver"></span>
        <br/>
        <br/>
        Status: <span id="modal_status"></span>
	
      </div>

      <!-- Modal footer -->
      <div class="modal-footer">
        <form id="rejectApplication" method="post" action="/api/applications/approver/reject">
          <input hidden type="number" name="applicationId" id="reject_applicationId"/>
          <button id="submit" class="btn btn-link text-danger">Reject</button>
        </form>
        <form id="approveApplication" method="post" action="/api/applications/approve">
          <input hidden type="number" name="applicationId" id="approve_applicationId" />
		      <button id="submit" class="btn btn-primary">Approve</button>
        </form>
      </div>
    </div>
  </div>
</div>

<script src="/js/approvers/view-applications.js"></script>

<style>
  #loading-spinner {
    position: absolute;
    left: 50%;
    z-index: 9999;
  }

  #past_software_table_wrapper, #software_table_wrapper {
    margin-top: -55px;
  }

  #software_table_filter, #past_software_table_filter {
    float: right;
  }
   #software_table_filter input, #past_software_table_filter input {
    float: left;
  }

  tbody tr {
    cursor: pointer;
  }
</style>